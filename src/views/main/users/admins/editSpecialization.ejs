<% extend("master.ejs") %>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Cập nhật thông tin chuyên khoa</h1>
</div>

<!-- Content Row -->
<div class="row">
    <div class="col-10 mx-auto">
        <form id="formUpdateClinic">
            <div class="form-group">
                <label for="name">Tên chuyên khoa</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Tên chuyên khoa"
                       value="<%= specialization.name %>">
            </div>
            <div class="form-group">
                <label for="intro-specialization">Mô tả</label>
                <textarea id="intro-specialization" class="form-control"><%= specialization.description %></textarea>
            </div>
            <div class="form-group">
                <label for="image-clinic">Cập nhật ảnh chuyên khoa</label>
                <input type="file" id="image-clinic" accept="image/*" onchange="loadFile(event)">
            </div>

            <div class="form-group">
                <% if(specialization.image) { %>
                    <img class="img-preview-clinic-create" id="image-preview" src="/images/specializations/<%= specialization.image %>">
                <% } else { %>
                    <img class="img-preview-clinic-create d-none" id="image-preview">
                <% } %>
            </div>

            <button type="button" class="btn btn-primary" id="btnUpdateSpecialization" data-clinic-id="<%= specialization.id %>">Cập nhật</button>
        </form>
    </div>

</div>

<script>
    $(document).ready(function() {
        $("div #collapseUtilities").addClass('show');
        $("div #collapseUtilities").find($("#aManageSpecialization")).addClass("active");
        $('.supporter-list-posts').removeClass('active');
    })
</script>
